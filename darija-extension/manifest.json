{
  "manifest_version": 3,
  "name": "Darija Translator Pro",
  "version": "7.0",
  "permissions": ["sidePanel", "storage"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "side_panel": { "default_path": "sidepanel.html" },
  "action": { "default_title": "Open Sidebar" }
}